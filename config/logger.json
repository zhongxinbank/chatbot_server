{
    "logging_settings": {
        "version": 1,
        "disable_existing_loggers": false,
        "use_color": false,
        "formatters": {
            "standard": {
                "format": "[%(asctime)s] [%(host)s] [%(levelname)s] [%(thread)s] [%(module)s] - %(message)s"
            }
        },
        "handlers": {
            "console": {
                "class": "logging.StreamHandler",
                "formatter": "standard",
                "stream": "ext://sys.stdout"
            },
            "info_file_handler": {
                "class": "logging.handlers.TimedRotatingFileHandler",
                "formatter": "standard",
                "filename": "./log/info.log",
                "when": "MIDNIGHT",
                "backupCount": 0,
                "encoding": "utf8"
            },
            "error_file_handler": {
                "class": "logging.handlers.TimedRotatingFileHandler",
                "formatter": "standard",
                "filename": "./log/error.log",
                "when": "MIDNIGHT",
                "backupCount": 0,
                "encoding": "utf8"
            }
        },
        "loggers": {
            "error": {
                "level": "ERROR",
                "handlers": [
                    "error_file_handler",
                    "console"
                ],
                "propagate": true
            },
            "info": {
                "level": "INFO",
                "handlers": [
                    "info_file_handler",
                    "console"
                ],
                "propagate": true
            },
            "debug": {
                "level": "DEBUG",
                "handlers": [
                    "console"
                ],
                "propagate": false
            },
            "warning": {
                "level": "WARNING",
                "handlers": [
                    "info_file_handler",
                    "console"
                ],
                "propagate": true
            }
        }
    }
}